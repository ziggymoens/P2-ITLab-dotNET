@model Sessie
@{
    ViewData["Title"] = Model.Titel;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<a class="btn btn-secondary" asp-controller="Sessie" asp-action="Index" data-toggle="tooltip" data-placement="bottom" title="Terug" style="width:10% ;margin-top: 5px; margin-right: 5px; margin-bottom: 5px;">
    <i class="fas fa-arrow-alt-circle-left"></i>
</a>
@*<h2>@ViewData["Title"]</h2>*@

<div class="">


    <div class="jumbotron">
        <h1 class="display-4">@Model.Titel @if (@Model.EindeUur < DateTime.Now)
        {<span class="badge badge-danger">Afgelopen</span>}
        else
        {<span class="badge badge-success">Gepland</span>}</h1>
        <hr class="my-4">
        <p class="lead"><u>Beschrijving:</u> @Model.Beschrijving</p>
        <p class="lead"><u>Gastspreker:</u> @Model.NaamGastSpreker</p>
        <p class="lead"><strong>@Model.StartUur.ToShortDateString()</strong> | <i>@Model.StartUur.ToShortTimeString() - @Model.EindeUur.ToShortTimeString()</i></p>
        <p class="lead"><strong>@Model.Lokaal.Stad.Naam</strong><i> @Model.Lokaal.Stad.Postcode</i> | <strong>@Model.Lokaal.Campus.Naam</strong> </p>
        <p class="lead"><u>Lokaal:</u> @Model.Lokaal.Gebouw.Naam - @Model.Lokaal.LokaalCode</p>
        <p class="lead"><u>Organisator:</u> @Model.Verantwoordelijke.Naam</p>
        <p class="lead"><u>Aantal ingeschreven:</u> @Model.Inschrijvingen.Count</p>
        <p class="lead"><u>Max. aantal plaatsen:</u> @Model.MaximumAantalPlaatsen</p>

        @if ((bool)ViewData["Datum"] == true)
        {
            <a class="btn btn-secondary btn-lg" href="/Sessie/ToonFeedback/@Model.SessieId">Toon Feedback</a>
        }
        else
        {
            @if (User.Identity.IsAuthenticated && User.IsInRole("Gebruiker"))
            {
                if (Model.Inschrijvingen.Any(e => e.Gebruiker.Naam == ((Gebruiker)ViewData["aangemelde"]).Naam))
                {
                    <a class="btn btn-secondary" asp-controller="Sessie" asp-action="SchrijfUit" asp-route-id="@Model.SessieId" data-toggle="tooltip" data-placement="bottom" title="Uitschrijven"><i class="far fa-calendar-minus">Uitschrijven</i></a>
                }
                else
                {
                    <a class="btn btn-secondary" asp-controller="Sessie" asp-action="SchrijfIn" asp-route-id="@Model.SessieId" data-toggle="tooltip" data-placement="bottom" title="Inschrijven"><i class="far fa-calendar-plus">Inschrijven</i></a>
                }
            }
        }
    </div>

</div>