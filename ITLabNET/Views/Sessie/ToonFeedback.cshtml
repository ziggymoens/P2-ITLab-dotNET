@model IEnumerable<Feedback>

@{
    ViewData["Title"] = "Toon feedback";
}
    <main>
        <h3 class="text-center">>@ViewData["Title"]</h3>
        <h4 class="text-center">@ViewData["Sessie"]</h4>
        <div class="center">
            @if (Model.Count() == 0) {
                <p>Er is geen feedback gegeven.</p>
             }
            else
            {
                @foreach (var feedback in Model)
                {
                    <div class="jumbotron">
                        <h3>@feedback.Gebruiker.Naam</h3>
                        <p class="lead">@feedback.Date</p>
                        <hr class="my-4">
                        <p>@feedback.Tekst</p>
                    </div>
                }
            }
        </div>
    </main>