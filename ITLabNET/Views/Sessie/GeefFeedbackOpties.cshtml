@model IEnumerable<Sessie>
@{
    ViewData["Title"] = "Feedback toevoegen";
}

<h3>Kies een sessie om feedback aan toe te voegen.</h3>
<p>U ziet alleen de sessies die u hebt bijgewoond.</p>
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <p>Er zijn geen sessies waarop u feedback kan geven.</p>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="card col-md-4">

                        <div class="card-body">
                            <h5 class="card-title">@item.Titel</h5>
                            <p class="card-text">Aangemaakt door: @item.Verantwoordelijke.Naam</p>
                            <p class="card-text">Spreker: @item.NaamGastSpreker</p>
                            <p class="card-text">Datum: @item.Datum.Date.ToString()</p>

                            <a class="btn btn-primary" type="submit" asp-controller="Sessie" asp-action="GeefFeedback" asp-route-id="@item.SessieId">Voeg feedback toe</a>

                        </div>
                    </div>
                }
            </div>
        }
    </div>