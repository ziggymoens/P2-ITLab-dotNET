@model IEnumerable<Sessie>
@{
    ViewData["Title"] = "Open sessie";
}

<h3>Kies een sessie om te openen.</h3>
<p>Indien u een sessie openzet zullen alle andere opties van de applicatie geblokkeerd worden en kunnen ingeschreven gebruikers zich registreren.</p>
<form method="post">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <p>Er zijn geen sessies die kunnen opengezet worden.</p>
        }
        else {
            <div class="row">
               @foreach (var item in Model) { 
                <div class="card col-md-4">

                    <div class="card-body">
                        <h5 class="card-title">@item.Titel</h5>
                        <p class="card-text"><strong>Maximaal</strong> @item.MaximumAantalPlaatsen personen</p>
                        <p class="card-text">Aangemaakt door: @item.Verantwoordelijke.Naam</p>
                        <p class="card-text">Spreker: @item.NaamGastSpreker</p>
                        <p class="card-text">Begint op: @item.Datum.ToString()</p>
                        <p class="card-text">Start en eind uur: @item.StartUur.ToString() - @item.EindeUur.ToString()</p>
                        <p class="card-text">Aantal ingeschrevenen: @item.Inschrijvingen.Count</p>

                        <button class="btn btn-primary" type="submit" asp-controller="Sessie" asp-action="OpenenSessie" asp-route-id="@item.SessieId">Openen</button>

                    </div>
                </div>
               }
            </div>
        }
    </div>
</form>

